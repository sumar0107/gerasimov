extends ../layout/main/_main

block title
  title Gerasimov

block body
  -var bodyClasses = 'no-logo'

append preload
  if locals.production

  else


block content
  include ../mixins/tabs/_tabs
  include ../mixins/header-lid/_header-lid
  include ../mixins/show-more-btn/_show-more-btn
  +header-lid
    .mdc-tab-bar__wrapper.mdc-tab-bar__wrapper_center
      +tabs()(class='js-mdc-tab-bar')
        +tab-item('Все','true')(class='js-filters-btn' data-filter='*')
        +tab-item('жилые','')(class='js-filters-btn'  data-filter='.category-residential')
        +tab-item('общественные','')(class='js-filters-btn'  data-filter='.category-public')
        +tab-item('градостроительство','')(class='js-filters-btn'  data-filter='.category-urban-planning')

    //-.mdc-select
      .mdc-select__anchor.demo-width-class
        i.mdc-select__dropdown-icon
        .mdc-select__selected-text
        span.mdc-floating-label
        .mdc-line-ripple
      .mdc-select__menu.mdc-menu.mdc-menu-surface.demo-width-class
        ul.mdc-list
          li.mdc-list-item.mdc-list-item--selected(data-value="grains" aria-selected="true") Bread, Cereal, Rice, and Pasta
          li.mdc-list-item(class="mdc-list-item" data-value="vegetables") Vegetables
          li.mdc-list-item(class="mdc-list-item" data-value="fruit") Fruit
  .mobile-menu__substrate-wrapper
    .mobile-menu__substrate.collapse
  .container
    include ../blocks/project/projects/_projects
    +show-more-btn('#','показать ещё')(class='js-projects-show-more')



