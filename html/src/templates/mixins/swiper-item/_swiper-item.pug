mixin swiper-item(type,src,caption)
  .swiper-item
    if type == 'video'
      .swiper-item__video
        iframe(src=src)&attributes(attributes)
      if(caption !== '')
        .swiper-item__caption
          p=caption
    else if type == 'img'
      .swiper-item__img
        .swiper-item__img-inner
          img(src=src)&attributes(attributes)
      if(caption !== '')
        .swiper-item__caption
          p=caption
    else if type == 'img-lazy'
      .swiper-item__img
        .swiper-item__img-inner
          img(data-src=src class='swiper-lazy')&attributes(attributes)
          .swiper-lazy-preloader
      if(caption !== '')
        .swiper-item__caption
          p=caption
    else
      block
mixin swiper-item-mobile-img(type,srcdscp,srcmob,caption)
  .swiper-item
    if type == 'video'
      .swiper-item__video
        iframe(src=src)&attributes(attributes)
      if(caption !== '')
        .swiper-item__caption
          p=caption
    else if type == 'img'
      .swiper-item__img
        .swiper-item__img-inner
          img(
            data-srcdscp=srcdscp
            data-srcmob=srcmob
            )&attributes(attributes)
      if(caption !== '')
        .swiper-item__caption
          p=caption
    else
      block
