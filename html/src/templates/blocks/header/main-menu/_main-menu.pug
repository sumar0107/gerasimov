mixin main-menu-li(link,text)
  li(class='main-menu__list-item')
    a(href=link class='main-menu__list-link')&attributes(attributes)=text
    block

nav.main-menu
  ul.main-menu__list
    +main-menu-li('./projects.html', 'Проекты')(class='active')
    +main-menu-li('./about.html', 'О компании')(class='')
    +main-menu-li('./publications.html', 'Публикации')(class='')
