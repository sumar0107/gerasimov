include ../../mixins/swiper-item/_swiper-item
include ../../mixins/icon-svg/_icon-svg
.front
  .swiper__wrapper
    //Slider main container
    .container-full
      .container
        .swiper.swiper-container.js-front
          //Additional required wrapper
          .swiper-wrapper
            //Slides
            .swiper-slide
              +swiper-item-mobile-img('img','./assets/img/front/front-1.png','./assets/img/front/front-1-m.png','')
            .swiper-slide
              +swiper-item-mobile-img('img','./assets/img/front/front-2.png','./assets/img/front/front-2-m.png','')
            .swiper-slide
              +swiper-item-mobile-img('img','./assets/img/front/front-3.png','./assets/img/front/front-3-m.png','')
            .swiper-slide
              +swiper-item-mobile-img('img','./assets/img/front/front-4.png','./assets/img/front/front-4-m.png','')
            //-.swiper-slide
              +swiper-item('img','https://via.placeholder.com/940x620','')
            //-.swiper-slide
              +swiper-item('img','https://via.placeholder.com/1056x620','')
            //-.swiper-slide
              +swiper-item('img','https://via.placeholder.com/1100x620','')
            //-.swiper-slide
              +swiper-item('img','https://via.placeholder.com/930x620','')
            //-.swiper-slide
              +swiper-item('img','https://via.placeholder.com/940x1100','')
            //-.swiper-slide
              +swiper-item('img','https://via.placeholder.com/1260x620','')
