              +swiper-item('img','https://via.placeholder.com/940x620','')



      //If we need navigation buttons
      .swiper__button
        .swiper__button-left
          .swiper__button-item.swiper__button-item_prev.js-swiper-button-prev
            +icon('arrow-left')
        .swiper__button-right
          .swiper__button-item.swiper__button-item_next.js-swiper-button-next
            +icon('arrow-right')
      //Add Scrollbar
      .swiper__scrollbar-wrapper
        .swiper__scrollbar.swiper-scrollbar.js-swiper-scrollbar
